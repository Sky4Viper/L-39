        incidence="0.25"
        length="0.22"
        chord="1"
        sweep="0"
        dihedral="0">
    <stall aoa="21" width="8" peak="1.3"/>
    <flap0 start="0.0" end="0.15" lift="-2" drag="2.3"/>
