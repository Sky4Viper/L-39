  <text>
    <name>LabelText</name>
    <type type="string">literal</type>
    <text type="string">Radio Panel</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.07</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>-3.72179</x-m>
      <y-m>0.31034</y-m>
      <z-m>0.46526</z-m>
      <heading-deg>-90</heading-deg>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>LabelText</object-name>
    <emission>
      <red>1.0</red>
      <green>0.8</green>
      <blue>0.0</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelText</object-name>
    <condition>
      <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <animation>
  <type>knob</type>
  <object-name>throttle_lever</object-name>
    <increase>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/throttle</property>
            <step>0.1</step>
            <min>0.0</min>
            <max>1.0</max>
            <wrap>false</wrap>
      </binding>
    </increase>
    <decrease>
      <binding>
          <command>property-adjust</command>
          <property>controls/engines/engine[0]/throttle</property>
            <step>-0.1</step>
            <min>0.0</min>
            <max>1.0</max>
            <wrap>false</wrap>
      </binding>
    </decrease>
    <hovered>
      <binding>
          <command>set-tooltip</command>
          <tooltip-id>engine-throttle-adj</tooltip-id>
          <label>Throttle</label>
      </binding>
    </hovered>
</animation>

  <animation>
    <type>pick</type>
    <object-name>engine_start_cover</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>l-39za/controls/enginebtncover</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch")</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>engine_start_btn</object-name>
    <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>l-39za/controls/eng_start_btn</property>
        </binding>
        <binding>
          <command>nasal</command>
          <script>switchclicksound.click("switch2")</script>
        </binding>
        <binding>
          		<command>nasal</command>
          		<script>engines.engine1.autostart();</script>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>l-39za/controls/eng_start_btn</property>
          </binding>
        </mod-up>
      </action>
      <hovered>
        <binding>
                <command>set-tooltip</command>
                <tooltip-id>engines-start-stop</tooltip-id>
                <label>Engines start/stop</label>
        </binding>
      </hovered>
  </animation>

</PropertyList>
