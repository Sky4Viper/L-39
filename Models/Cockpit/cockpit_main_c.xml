<?xml version="1.0"?>

<PropertyList>

    <!-- Pilot models -->
	
	<model>
    <name>Pilot</name>
		<path>Aircraft/L-39/Models/Pilot/pilot.xml</path>
		<offsets>
			<x-m>-2.68314</x-m>
			<y-m> 0.00</y-m>
			<z-m>-0.813295</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model> 
	
	<model>
    <name>Instructor</name>
		<path>Aircraft/L-39/Models/Pilot/pilot.xml</path>
		<offsets>
			<x-m>-1.36095</x-m>
			<y-m> 0.00</y-m>
			<z-m>-0.590803</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

  <!-- Front panel -->
  <model>
    <path>Aircraft/L-39/Models/Cockpit/Front_Panel/front_panel_c.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
