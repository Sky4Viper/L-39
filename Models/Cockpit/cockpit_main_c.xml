      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   -8.25163 </pitch-deg>
      <heading-deg> -1.800 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy Lock Rear-->
  <model>
    <path>Aircraft/L-39/Models/Cockpit/Canopy_lock/canopy_lock.xml</path>
    <offsets>
      <x-m> -1.68764 </x-m>
      <y-m> -0.348905 </y-m>
      <z-m> -0.306187 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   -8.25163 </pitch-deg>
      <heading-deg> -1.096 </heading-deg>
    </offsets>
  </model>

  <!-- Temp Rear cockpit panel -->
  <model>
    <path>Aircraft/L-39/Models/Cockpit/Front_Panel/front_panel_rear_c.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Front instruments -->

  <model>
    <path>Aircraft/L-39/Models/Instruments/front_instruments.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
    <condition>
				<property>/sim/current-view/internal</property>
		</condition>
  </model>

  <!-- Rear instruments -->

  <model>
    <path>Aircraft/L-39/Models/Instruments/rear_instruments.xml</path>
    <offsets>
      <x-m> 0.0</x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
    <condition>
		  <equals>
          <property>sim/current-view/view-number</property>
          <value>8</value>
		  </equals>
	  </condition>
  </model>

  <!-- Gunsight -->

  <model>
		<path>Aircraft/L-39/Models/Instruments/gunsight/Gunsight.xml</path>
		<offsets>
			<x-m>-3.44671</x-m>
			<y-m>0.0</y-m>
			<z-m>-0.350787</z-m>
			<roll-deg>0.0</roll-deg>
			<pitch-deg>0.0</pitch-deg>
			<heading-deg>0.0</heading-deg>
		</offsets>
	</model>

  <!-- LH Panel-->
  <model>
    <path>Aircraft/L-39/Models/Cockpit/LH_Panel/lh_panel.xml</path>
