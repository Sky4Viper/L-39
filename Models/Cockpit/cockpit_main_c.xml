      <roll-deg>    17.3 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
    <overlay>
			<animation n="100">
			<type>scale</type>
			<property>constants/zero</property>
			<x-offset>0.79</x-offset>
			<y-offset>0.79</y-offset>
			<z-offset>0.79</z-offset>
			</animation>
    </overlay>
    <condition>
				<property>/sim/current-view/internal</property>
		</condition>
  </model>
   
</PropertyList>

