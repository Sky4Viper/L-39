    </offsets>
  </model>

  <!-- Front panel 2-->
  <model>
    <path>Aircraft/L-39/Models/Cockpit/Front_Panel/front_panel_2_c.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Canopy Lock-->
  <model>
    <path>Aircraft/L-39/Models/Cockpit/Canopy_lock/canopy_lock.xml</path>
    <offsets>
      <x-m> -2.97024 </x-m>
