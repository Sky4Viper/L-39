    <!-- Blinking lights right panel -->

    <animation>
        <type>timed</type>
        <object-name>caution_light.004</object-name>
        <object-name>caution_light.off.004</object-name>
        <use-personality type="bool">true</use-personality>
        <branch-duration-sec>0.5</branch-duration-sec>
        <branch-duration-sec>0.5</branch-duration-sec>
    </animation>

    <animation>
        <type>timed</type>
