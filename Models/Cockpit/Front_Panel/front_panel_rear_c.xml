<?xml version="1.0"?>

<PropertyList>
  <path>f-panel-rc.ac</path>

	<!-- Landing gear lever -->

  <animation>
    <type>material</type>
    <object-name>rc_gear_base</object-name>
    <object-name>rc_landing_gear_lever</object-name>
    <object-name>rc_landing_gear_switch</object-name>
    <object-name>rc_landing_gear_support</object-name>
    <object-name>rc_screws</object-name>
    <emission>
      <red>0.2</red>
      <green>0.2</green>
      <blue>0.2</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
    <condition>
        <property>/controls/electric/battery-switch</property>
     </condition>
  </animation>

    <animation> 
        <object-name>rc_gear_down_lamp</object-name>
        <object-name>rc_gear_airbrake_lamp</object-name>
        <emission> 
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>0</red>
            <green>1.2</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>/controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>rc_gear_up_lamp</object-name>
        <object-name>rc_gear_flaps_lamp</object-name>
        <object-name>rc_gear_door_lamp</object-name>
        <emission> 
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>1.2</red>
            <green>0</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>/controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>warning_light.001</object-name>
        <object-name>warning_light.off.001</object-name>
        <object-name>warning_light.002</object-name>
        <object-name>warning_light.off.002</object-name>
        <object-name>warning_light.003</object-name>
        <object-name>warning_light.off.003</object-name>
        <object-name>warning_light.004</object-name>
        <object-name>warning_light.off.004</object-name>
        <object-name>warning_light.005</object-name>
        <object-name>warning_light.off.005</object-name>
        <object-name>warning_light.006</object-name>
        <object-name>warning_light.off.006</object-name>
        <object-name>warning_light.007</object-name>
        <object-name>warning_light.off.007</object-name>
        <object-name>warning_light.008</object-name>
        <object-name>warning_light.off.008</object-name>
        <object-name>warning_light.009</object-name>
        <object-name>warning_light.off.009</object-name>
        <object-name>warning_light.010</object-name>
        <object-name>warning_light.011</object-name>
        <object-name>warning_light.off.011</object-name>
        <object-name>warning_light.012</object-name>
        <object-name>warning_light.off.012</object-name>

        <object-name>caution_light.004</object-name>
        <object-name>caution_light.off.004</object-name>
        <object-name>caution_light.005</object-name>
        <object-name>caution_light.off.005</object-name>
        <object-name>caution_light.008</object-name>
        <object-name>caution_light.off.008</object-name>
        <object-name>caution_light.010</object-name>
        <object-name>caution_light.off.010</object-name>
        <object-name>caution_light.012</object-name>
        <object-name>caution_light.off.012</object-name>
        <object-name>caution_light.014</object-name>
        <object-name>caution_light.off.014</object-name>

        <object-name>arms_light.002</object-name>
        <object-name>arms_light.off.002</object-name>
        <emission> 
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>1.2</red>
            <green>0</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>/controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>caution_light.002</object-name>
        <object-name>caution_light.003</object-name>
        <object-name>caution_light.006</object-name>
        <object-name>caution_light.007</object-name>
        <object-name>caution_light.013</object-name>
        <emission> 
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>0</red>
            <green>1.2</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>/controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>caution_light.001</object-name>
        <object-name>caution_light.011</object-name>
        <object-name>caution_light.015</object-name>
        <object-name>caution_light.016</object-name>
        <object-name>arms_light.001</object-name>
        <object-name>arms_light.003</object-name>
        <emission> 
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>1.2</red>
            <green>0.973</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>/controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>caution_light.009</object-name>
        <emission> 
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
            <red>1.2</red>
            <green>1.2</green>
            <blue>1.2</blue>
        </emission>
      <condition>
        <property>/controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
		<type>select</type>
		<object-name>rc_gear_up_lamp</object-name>
		<condition>
        <property>/controls/electric/battery-switch</property>
				<equals>
					<property>gear/gear[0]/position-norm</property>
					<value>0</value>
				</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>rc_gear_down_lamp</object-name>
		<condition>
        <property>/controls/electric/battery-switch</property>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

    <animation>
		<type>select</type>
		<object-name>rc_gear_airbrake_lamp</object-name>
		<condition>
        <property>/controls/electric/battery-switch</property>
            <greater-than>
                <property>surface-positions/speedbrake-pos-norm</property>
                <value>0</value>
            </greater-than>
        </condition>
	</animation>

    <animation>
        <type>select</type>
        <object-name>rc_gear_flaps_lamp</object-name>
        <condition>
        <property>/controls/electric/battery-switch</property>
            <greater-than>
                <property>surface-positions/flap-pos-norm</property>
                <value>0.5</value>
            </greater-than>
            <not>
				<equals>
					<property>gear/gear[0]/position-norm</property>
					<value>1</value>
				</equals>
			</not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rc_gear_door_lamp</object-name>
        <condition>
        <property>/controls/electric/battery-switch</property>
            <greater-than>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>

    <!-- WARNING LIGHTS -->

    <animation>
        <type>timed</type>
        <object-name>arms_light.002</object-name>
        <object-name>arms_light.off.002</object-name>
        <use-personality type="bool">true</use-personality>
        <branch-duration-sec>0.5</branch-duration-sec>
        <branch-duration-sec>0.5</branch-duration-sec>
    </animation>

    <!-- Blinking lights left panel -->

    <animation>
        <type>timed</type>
