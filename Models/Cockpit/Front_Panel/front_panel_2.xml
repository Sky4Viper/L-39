  <animation>
		<type>select</type>
		<object-name>arm_light.009</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
      <property>/controls/armament/bombs-sel</property>
      <or>
        <equals>
				  <property>sim/weight[0]/payload-int</property>
				  <value>4</value>
			  </equals>
        <equals>
				  <property>sim/weight[1]/payload-int</property>
