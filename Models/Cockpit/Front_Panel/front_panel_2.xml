<?xml version="1.0"?>

<PropertyList>
  <path>f-panel-2.ac</path>

  <animation>
    <type>material</type>
    <object-name>arm_panel_02.002</object-name>
    <object-name>arm_panel_02.003</object-name>
    <!-- <object-name>arm_panel_02.005</object-name> -->
    <object-name>arm_panel_02.006</object-name>
    <object-name>arm_panel_02.007</object-name>
    <object-name>arm_panel_02.008</object-name>
    <object-name>arm_panel_02.009</object-name>
    <object-name>arm_panel_02.010</object-name>
    <object-name>jet_switch_cover.001</object-name>
    <object-name>jet_switch_cover.002</object-name>
    <object-name>inst_panel_screws</object-name>
    <object-name>inst_panel_screws.001</object-name>
