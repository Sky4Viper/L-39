<?xml version="1.0"?>

<PropertyList>
  <path>f-panel-2.ac</path>

  <animation>
    <type>material</type>
    <object-name>arm_panel_02.002</object-name>
    <object-name>arm_panel_02.003</object-name>
    <!-- <object-name>arm_panel_02.005</object-name> -->
    <object-name>arm_panel_02.006</object-name>
    <object-name>arm_panel_02.007</object-name>
    <object-name>arm_panel_02.008</object-name>
    <object-name>arm_panel_02.009</object-name>
    <object-name>arm_panel_02.010</object-name>
    <object-name>jet_switch_cover.001</object-name>
    <object-name>jet_switch_cover.002</object-name>
    <object-name>inst_panel_screws</object-name>
    <object-name>inst_panel_screws.001</object-name>
    <object-name>arm_switch.001</object-name>
    <object-name>arm_switch.002</object-name>
    <object-name>jet_switch.001</object-name>
    <object-name>jet_switch.002</object-name>
    <object-name>trim_pitch_index</object-name>
    <emission>
      <red>0.2</red>
      <green>0.2</green>
      <blue>0.2</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
    <condition>
        <property>/controls/electric/battery-switch</property>
     </condition>
  </animation>

  <animation> 
    <object-name>arm_light.001</object-name>
    <object-name>arm_light.002</object-name>
    <object-name>arm_light.003</object-name>
    <object-name>arm_light.004</object-name>
    <object-name>arm_light.005</object-name>
    <object-name>arm_light.006</object-name>
    <object-name>arm_light.007</object-name>
    <object-name>arm_light.008</object-name>
    <object-name>arm_light.009</object-name>
    <object-name>arm_light.010</object-name>
    <object-name>arm_light.011</object-name>
    <object-name>arm_light.012</object-name>
    <emission> 
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>0</red>
      <green>1.2</green>
      <blue>0</blue>
    </emission>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.001</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
				<property>sim/weight[0]/payload-int</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.002</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
				<property>sim/weight[1]/payload-int</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.003</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
				<property>sim/weight[2]/payload-int</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.004</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
				<property>sim/weight[3]/payload-int</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.005</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
        <greater-than>
          <property>sim/weight[0]/payload-int</property>
          <value>1</value>
        </greater-than>
      </condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.006</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
        <greater-than>
          <property>sim/weight[1]/payload-int</property>
          <value>1</value>
        </greater-than>
    </condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.007</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
        <greater-than>
          <property>sim/weight[2]/payload-int</property>
          <value>1</value>
      </greater-than>
    </condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.008</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
      <greater-than>
        <property>sim/weight[3]/payload-int</property>
        <value>1</value>
      </greater-than>
    </condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.009</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
      <or>
        <equals>
				  <property>sim/weight[0]/payload-int</property>
				  <value>4</value>
			  </equals>
        <equals>
				  <property>sim/weight[1]/payload-int</property>
				  <value>4</value>
			  </equals>
        <equals>
				  <property>sim/weight[2]/payload-int</property>
				  <value>4</value>
			  </equals>
        <equals>
				  <property>sim/weight[3]/payload-int</property>
				  <value>4</value>
			  </equals>
      </or>
    </condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.010</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
			  <property>/controls/armament/rocketsLeft</property>
			  <value>0</value>
		  </equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.011</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
			  <property>/controls/armament/rocketsLeft</property>
			  <value>0</value>
		  </equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.012</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
				<property>/controls/flight/aileron-trim</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>

</PropertyList>

