    <object-name>arm_switch.008</object-name>
    <object-name>arm_switch.009</object-name>
    <object-name>jet_switch.001</object-name>
    <object-name>jet_switch.002</object-name>
    <object-name>trim_pitch_index</object-name>
    <emission>
      <red>0.2</red>
      <green>0.2</green>
      <blue>0.2</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
    <condition>
        <property>/controls/electric/battery-switch</property>
     </condition>
  </animation>

  <animation> 
    <object-name>arm_light.001</object-name>
    <object-name>arm_light.002</object-name>
    <object-name>arm_light.003</object-name>
    <object-name>arm_light.004</object-name>
    <object-name>arm_light.005</object-name>
    <object-name>arm_light.006</object-name>
    <object-name>arm_light.007</object-name>
    <object-name>arm_light.008</object-name>
    <object-name>arm_light.009</object-name>
    <object-name>arm_light.010</object-name>
    <object-name>arm_light.011</object-name>
    <object-name>arm_light.012</object-name>
    <emission> 
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>0</red>
      <green>1.2</green>
      <blue>0</blue>
    </emission>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.001</object-name>
		<condition>
      <property>/controls/electric/battery-switch</property>
			<equals>
				<property>sim/weight[0]/payload-int</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>

  <animation>
		<type>select</type>
		<object-name>arm_light.002</object-name>
		<condition>
