<!-- Radio altimeter
3D instrument for Tu-154 -->
<PropertyList>
 <path>rv-5m.ac</path>

  <!-- Internal instruments lighting -->
  <animation>
    <type>material</type>
    <object-name>needle</object-name>
    <object-name>index</object-name>
    <object-name>index_light</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>1.0</red>
      <green>0.94</green>
      <blue>0.74</blue>
    </emission>
        <condition>
		    <property>/controls/electric/battery-switch</property>
	    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lamp_light</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   2.0 </red>
      <green> 1.8 </green>
      <blue>  1.0 </blue>
    </emission>
        <condition>
		    <property>/controls/electric/battery-switch</property>
	    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>centre</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>1.0</red>
      <green>0.94</green>
      <blue>0.74</blue>
    </emission>
        <condition>
		    <property>/controls/electric/battery-switch</property>
	    </condition>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>lamp_light</object-name>
    <condition>
      <property>/controls/electric/ralt-switch</property>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <property>controls/instrumentation/danger-altitude-ft</property>
      </less-than>
      <less-than>
          <property>/gear/gear[0]/position-norm</property>
          <value>1</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>index_light</object-name>
    <condition>
      <or>
      <greater-than>
        <property>/position/altitude-agl-ft</property>
        <value>2625</value>
      </greater-than>
      <not>
        <property>/controls/electric/ralt-switch</property>
      </not>
      </or>
    </condition>
  </animation>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
  <expression>
    <table>
      <product>
          <sum>
            <property>/position/altitude-agl-ft</property>
            <value>-3</value>
          </sum>
        <value>0.3048</value>
      </product>
      <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	50.0</ind>	<dep>	75.0</dep></entry>
      <entry><ind>	60.0</ind>	<dep>	91.5</dep></entry>
      <entry><ind>	80.0</ind>	<dep>	123.0</dep></entry>
      <entry><ind>	100.0</ind>	<dep>	155.0</dep></entry>
      <entry><ind>	200.0</ind>	<dep>	179.0</dep></entry>
      <entry><ind>	300.0</ind>	<dep>	203.0</dep></entry>
      <entry><ind>	400.0</ind>	<dep>	226.0</dep></entry>
      <entry><ind>	500.0</ind>	<dep>	251.0</dep></entry>
      <entry><ind>	700.0</ind>	<dep>	300.0</dep></entry>
      <entry><ind>	800.0</ind>	<dep>	325.0</dep></entry>
    </table>
  </expression>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
    <condition>
        <property>/controls/electric/ralt-switch</property>
    </condition>
</animation>

<animation>
  <type>rotate</type>
  <object-name>index</object-name>
  <property>controls/instrumentation/danger-altitude-ft</property>
  <interpolation>
   <entry><ind>0</ind><dep> 0</dep></entry>
   <!-- 100 m -->
   <entry><ind>328.1</ind><dep> 155</dep></entry>
   <!-- 200 m -->
   <entry><ind>656.2</ind><dep> 180</dep></entry>
   <!-- 700 m -->
   <entry><ind>2296.7</ind><dep>300</dep></entry>
   <!-- 750 m -->
   <entry><ind>2460.75</ind><dep>312</dep></entry>
  </interpolation>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>knob_alt</object-name>
  <property>controls/instrumentation/danger-altitude-ft</property>
  <factor>1</factor>
  <center>
      <x-m>0</x-m>
      <y-m>-0.039545</y-m>
      <z-m>-0.045365</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
</animation>


