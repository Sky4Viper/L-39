     <animation>
        <type>knob</type>
        <object-name>knob_alt</object-name>
        <increase>
          <binding>
              <command>property-adjust</command>
              <property>controls/instrumentation/danger-altitude-ft</property>
              <step>32.81</step>
              <min>0</min>
              <max>2460.75</max>
              <wrap>0</wrap>
          </binding>
          <binding>
            <command>nasal</command>
            <script>switchclicksound.click("adf-dial")</script>
          </binding>
        </increase>
        <decrease>
          <binding>
              <command>property-adjust</command>
              <property>controls/instrumentation/danger-altitude-ft</property>
              <step>-32.81</step>
              <min>0</min>
              <max>2460.75</max>
              <wrap>0</wrap>
          </binding>
          <binding>
                <command>nasal</command>
                <script>switchclicksound.click("adf-dial")</script>
          </binding>
        </decrease>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rv-5m-dh</tooltip-id>
                <label>Adjust danger altitude warning</label>
            </binding>
        </hovered>
    </animation>

</PropertyList>
