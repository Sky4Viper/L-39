  <animation> 
   <type>rotate</type>
    <object-name>Gunsight_Pipper</object-name>
    <property>controls/gunsight/gunsight-dep</property>
    <factor>0.05</factor>
    <min>0</min>
    <max>13</max>
    <axis> 
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>-2.79</x-m>
      <y-m>0.0</y-m>
      <z-m>0.1778</z-m>
    </center>
  </animation>

  <!-- pipper depression pitch -->
  <animation> 
   <type>rotate</type>
    <object-name>Gunsight_Pipper</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-0.05</factor>
    <axis> 
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>-2.79</x-m>
      <y-m>0.0</y-m>
      <z-m>0.1778</z-m>
    </center>
    <condition>
      <greater-than>
        <property>/orientation/pitch-deg</property>
        <property>controls/gunsight/gunsight-dep</property>
      </greater-than>
    </condition>
  </animation> 

  <!-- pipper side slip-->
  <animation> 
   <type>translate</type>
    <object-name>Gunsight_Pipper</object-name>
    <property>/orientation/side-slip-deg</property>
    <factor>0.002</factor>
    <min>-0.008</min>
    <max>0.008</max>
    <axis> 
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0.178236</x-m>
      <y-m>0.0</y-m>
      <z-m>0.171455</z-m>
    </center>
    <condition>
      <!-- <property>/controls/electric/ralt-switch</property> -->
      <greater-than>
        <property>/orientation/side-slip-deg</property>
        <value>-5</value>
      </greater-than>
      <less-than>
          <property>/orientation/side-slip-deg</property>
          <value>5</value>
      </less-than>
      <greater-than>
          <property>velocities/groundspeed-kt</property>
          <value>5</value>
      </greater-than>
    </condition>
  </animation>

  <!-- pipper depression with g-load -->
  <animation> 
   <type>translate</type>
    <object-name>Gunsight_Pipper</object-name>
    <property>accelerations/pilot-g</property>
    <factor>-0.006</factor>
    <offset-m>0.006</offset-m>
