  <animation>
  <type>material</type>
  <object-name>Needle1</object-name>
  <object-name>Needle2</object-name>
  <object-name>Face</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>1.0</red>
            <green>0.94</green>
            <blue>0.74</blue>
    </emission>
        <condition>
		    <property>/controls/electric/battery-switch</property>
	    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Needle1</object-name>
    <property>/engines/engine[0]/rpm</property>
    <interpolation>
      <entry><ind>   0.0 </ind><dep>  60.0 </dep></entry>
      <entry><ind>  20.0 </ind><dep> 120.0 </dep></entry>
      <entry><ind>  40.0 </ind><dep> 180.0 </dep></entry>
      <entry><ind>  60.0 </ind><dep> 240.0 </dep></entry>
      <entry><ind>  80.0 </ind><dep> 300.0 </dep></entry>
      <entry><ind> 100.0 </ind><dep> 360.0 </dep></entry>
      <entry><ind> 107.0 </ind><dep> 381.0 </dep></entry>
    </interpolation>
    <axis>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Needle2</object-name>
    <property>/engines/engine[0]/rpm</property>
    <interpolation>
      <entry><ind>   0.0 </ind><dep>  60.0 </dep></entry>
      <entry><ind>  20.0 </ind><dep> 105.0 </dep></entry>
