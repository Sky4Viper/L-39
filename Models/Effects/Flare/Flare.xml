<?xml version="1.0"?>

<PropertyList>

	<path>Flare.ac</path>
	
	<animation>
		<type>billboard</type>
		<spherical>true</spherical>
	</animation>
	
	<animation>
		<type>dist-scale</type>
		<object-name>FlareA</object-name>
		<interpolation>
			<entry>
			<ind>0</ind>
			<dep>1.5</dep>
			</entry>
			<entry>
			<ind>500</ind>
			<dep>3.0</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>dist-scale</type>
		<object-name>FlareB</object-name>
		<interpolation>
			<entry>
			<ind>0</ind>
			<dep>1.0</dep>
			</entry>
			<entry>
			<ind>500</ind>
			<dep>4.5</dep>
			</entry>
		</interpolation>
	</animation>
	
	<!-- white flare -->
	<animation>
		<type>material</type>
		<object-name>FlareA</object-name>
		<emission>
			<factor-prop>sim/time/elapsed-sec</factor-prop>
			<offset>2.0</offset>
			<red>-0.2</red>
			<green>-0.2</green>
			<blue>-0.2</blue>
		</emission>
	</animation> 

	<animation>
		<type>textranslate</type>
		<object-name>FlareA</object-name>
		<object-name>FlareB</object-name>
		<!-- <property>/controls/armament/flare-colour</property> -->
		<property>/sim/multiplay/generic/int[17]</property>
		 <factor>0.25</factor>
		 <step>1.0</step>
		 <offset>-1.0</offset>
		 <axis>
			 <x>1</x>
			 <y>0</y>
			 <z>0</z>
		 </axis>
	 </animation>
	
	<animation>
		<type>rotate</type>
		<object-name>FlareB</object-name>
		<property>/sim/time/elapsed-sec</property>
		<factor>120.0</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<animation>
		<type>flash</type>
		<object-name>FlareB</object-name>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<power>100</power>
	</animation>
	
	<model>
		<name>flare-trail-r</name>
		<path>Aircraft/L-39/Models/Effects/Flare/flare-trail-red.xml</path>
		<condition>
			<equals>
        		<property>/sim/multiplay/generic/int[17]</property>
        		<value>2</value>
			</equals>
    	</condition>
		<offsets>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</model>

	<model>
		<name>flare-trail-g</name>
		<path>Aircraft/L-39/Models/Effects/Flare/flare-trail-green.xml</path>
		<condition>
			<equals>
        		<property>/sim/multiplay/generic/int[17]</property>
        		<value>3</value>
			</equals>
    	</condition>
		<offsets>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</model>

	<model>
		<name>flare-trail-y</name>
		<path>Aircraft/L-39/Models/Effects/Flare/flare-trail-yellow.xml</path>
		<condition>
			<equals>
        		<property>/sim/multiplay/generic/int[17]</property>
        		<value>4</value>
			</equals>
    	</condition>
		<offsets>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</model>
	
	<model>
		<name>flare-smoke</name>
		<path>Aircraft/L-39/Models/Effects/Flare/Flare-Smoke.xml</path>
		<offsets>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</model>

</PropertyList>