<?xml version="1.0"?>

<PropertyList>

  <particlesystem>
    <name>blur</name>
    <texture>L-39ZA-blur.png</texture>
    <emissive type="bool">false</emissive>
    <lighting type="bool">false</lighting>

    <attach>world</attach>

    <placer>
      <type>point</type> 
    </placer>

    <shooter>
      <theta-min-deg>89</theta-min-deg>
      <theta-max-deg>91</theta-max-deg>
      <phi-min-deg>-1</phi-min-deg>
      <phi-max-deg>1</phi-max-deg>
      <speed-mps>
        <value>50</value>
        <spread>25</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>1000</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>2000</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>20</value>
        <spread>0</spread>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <red><value>   0.7 </value></red>
          <green><value> 0.7 </value></green>
          <blue><value>  0.7 </value></blue>
          <alpha><value> 0.7 </value></alpha>
        </color>
        <size>
          <value>0.22</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.1 </value></red>
          <green><value> 0.1 </value></green>
          <blue><value>  0.1 </value></blue>
          <alpha><value> 0.1 </value></alpha>
        </color>
        <size>
          <value>2.0</value>
        </size>
      </end>

      <life-sec>
        <value>1.0</value>
      </life-sec>

      <mass-kg>  0.5 </mass-kg>
      <radius-m> 0.2 </radius-m>
    </particle>

    <program>
      <fluid> air </fluid>
      <gravity type="bool"> true </gravity>
      <wind typ="bool"> true </wind>
    </program>

  </particlesystem>

</PropertyList>
